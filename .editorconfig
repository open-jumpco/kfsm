root = true

[*]

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Change these settings to your own preference
indent_style = space
indent_size = 4

[{{{*.{kt,java}}]
indent_style = space

[*.{ts,tsx,js,jsx,json,css,scss,yml}}}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
